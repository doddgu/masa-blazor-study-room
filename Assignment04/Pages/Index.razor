        <MTimelineItem Color="teal lighten-3"
                       Small>
            <MRow Class="pt-1">
                <MCol Cols="3">
                    <strong>3-4pm</strong>
                </MCol>
                <MCol>
                    <strong>Design Stand Up</strong>
                    <div class="text-caption mb-2">
