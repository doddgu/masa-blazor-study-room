            <MRow Class="pt-1">
                <MCol Cols="3">
                    <strong>12pm</strong>
                </MCol>
                <MCol>
                    <strong>Lunch break</strong>
                </MCol>
            </MRow>
        </MTimelineItem>

        <MTimelineItem Color="teal lighten-3"
                       Small>
            <MRow Class="pt-1">
                <MCol Cols="3">
                    <strong>9-11am</strong>
                </MCol>
                <MCol>
                    <strong>Finish Home Screen</strong>
                    <div class="text-caption">
                        Web App
                    </div>
                </MCol>
            </MRow>
        </MTimelineItem>
